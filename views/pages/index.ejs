<!DOCTYPE html>
<html>
  <head>
    <%- include('../layout/head') %>
  </head>
  <body>
    <header>
      <%- include('../layout/header') %>
    </header>
    <section>
      <p>You have <%= bananas.length %> book(s) on your shelf.</p>
    </section>
    <main>
      <ul class=shelf-home>
        <% bananas.forEach(listItems => { %>
            <li class="list-item" data-id="<%= listItems.id %>">
              <img src="<%= listItems.image %>" alt="book jacket">
              <h4>Title: <%= listItems.title %></h4>
              <p>Author: <%= listItems.authors %></p>
              <a href="/view-details/<%= listItems.id %>">View the details of this book.</a>
            </li>
        <% })%>
      </ul>
    </main>
  </body>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="../js/app.js"></script>
</html>